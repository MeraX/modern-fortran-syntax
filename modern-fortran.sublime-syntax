%YAML 1.2
---
name: BeautifulFortran
file_extensions: [F90,F08,F18,f90,f08,f18]
scope: source.fortran

contexts:
  main:
    - include: comments 
    - include: functions

  comments:
    - match: "!"
      push:
        - meta_scope: comment.line
        - match: \n
          pop: true

  functions:
    - match: (function)\s*(\w*)
      captures:
        1: keyword.declaration.function
        2: entity.name.function
